{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "baseUrl": "/",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "**/*",
    "node_modules/@types/jasmine/index.d.ts"
  ]
}
